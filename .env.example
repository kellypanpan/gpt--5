# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_SECRET_KEY=your-clerk-secret-key
CLERK_WEBHOOK_SECRET=your-clerk-webhook-secret

# Supabase Database
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Creem Payment Processing
CREEM_WEBHOOK_SECRET=your-creem-webhook-secret

# Cloudinary for File Uploads
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
LOG_LEVEL=info

# Security & Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Email Service (Optional - for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@gpt5ai.com

# Analytics & Monitoring (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn
POSTHOG_API_KEY=your-posthog-api-key

# Redis (Optional - for advanced rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Feature Flags
FEATURE_PDF_ANALYSIS=true
FEATURE_IMAGE_GENERATION=true
FEATURE_SCRIPT_GENERATION=true
FEATURE_PROMPT_MARKETPLACE=true
FEATURE_AGENT_CHAT=true

# API Configuration
API_REQUEST_TIMEOUT=30000
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,webp

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=10000

# OpenAI Model Configuration
OPENAI_TEXT_MODEL=gpt-4-turbo-preview
OPENAI_IMAGE_MODEL=dall-e-3
OPENAI_MODERATION_MODEL=text-moderation-latest

# Content Moderation
ENABLE_CONTENT_MODERATION=true
CONTENT_MODERATION_THRESHOLD=0.8

# Backup and Maintenance
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
MAINTENANCE_MODE=false

# Development & Testing
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
TEST_USER_EMAIL=test@example.com
TEST_USER_CREDITS=1000